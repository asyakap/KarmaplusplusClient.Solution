@{
  ViewData["Title"] = $"Details for {Model.VolunteeringName}";
}

<br>
<h2>Volunteering Opportunity Details</h2>
<br>
<h4>@Model.VolunteeringName</h4>
<br>
<p>Description: @Model.Description</p>
<p>Email: @Model.Email</p>
<p>Location: <a style="font-size: 16px" href="https://www.google.com/maps/search/?api=1&query=@Model.Location" target="_blank">@Model.Location</a></p>
<p>Zip Code: @Model.ZipCode</p>
<p>Date: @Model.Date</p>
<p>Time: @Model.Time</p>

<br>
@if (@Model.UserId == @ViewBag.UserId)
{
<div id="navlinks">
<p>@Html.ActionLink("Edit details", "Edit", new { id = @Model.VolunteeringId }) | @Html.ActionLink("Delete volunteering opportunity", "Delete", new { id = @Model.VolunteeringId }) </p>
</div>
}
<div id="navlinks">
<p>@Html.ActionLink("Return to all volunteering opportunities", "Index")</p>
</div>