@{
  ViewData["Title"] = "Services";
}
@using Karmaplusplus.Models;
@using System.Collections.Generic;

<div class="container">

  <h3>Search Results For '@ViewBag.SearchResults':</h3>
  @if (Model.Count == 0)
  {
    <p> No services match this search </p>
  }
  else
  {
    <ol>
      @foreach (Service service in Model)
      {
        <li><strong><a href="/Services/Details/@(service.ServiceId)">@service.ServiceName</a></strong> - @service.Description</li>
      }
    </ol>
  }
<p>@Html.ActionLink("Return to all services", "Index")</p>
</div>