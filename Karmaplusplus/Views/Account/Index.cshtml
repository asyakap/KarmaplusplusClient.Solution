@{
  Layout = "_Layout";
}

<h2>Account Information</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
  <h3>Hello @ViewBag.FirstName!</h3>
  <br>
  <br>
  <div id="navlinks">
    <p>@Html.ActionLink("See my services", "Services")</p>
  </div>
    <div id="navlinks">
    <p>@Html.ActionLink("See my volunteering opportunities", "Volunteerings")</p>
  </div>
  <br>

  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" class = "btn btn-primary" value="Log out" />
  }
}
else
{
  <div id="navlinks">
    <p>@Html.ActionLink("Register", "Register") | @Html.ActionLink("Log in", "Login")</p>
  </div>
}