@{
  ViewData["Title"] = $"Edit {Model.VolunteeringName}";
}

@model Karmaplusplus.Models.Volunteering

<h4>Edit @Model.VolunteeringName</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.VolunteeringId)
  @Html.HiddenFor(model => model.UserId)

  <div class="form-group">
    @Html.LabelFor(model => model.VolunteeringName, new { @class = "control-label" })
    @Html.TextBoxFor(model => model.VolunteeringName, new { @class = "form-control" })
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.Description, new { @class = "control-label" })
    @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.Email, new { @class = "control-label" })
    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.Location, new { @class = "control-label" })
    @Html.TextBoxFor(model => model.Location, new { @class = "form-control" })
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.ZipCode, new { @class = "control-label" })
    @Html.TextBoxFor(model => model.ZipCode, new { @class = "form-control" })
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.Date, new { @class = "control-label" })
    @Html.TextBoxFor(model => model.Date, new { @class = "form-control" })
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.Time, new { @class = "control-label" })
    @Html.TextBoxFor(model => model.Time, new { @class = "form-control" })
  </div>
  
  <br>
  <br>

  <div class="form-group">
    <input type="submit" value="Save" class="btn btn-primary"/>
  </div>
}

<br>
<div id="navlinks">
<p>@Html.ActionLink("Back to details", "Details", new {id = @Model.VolunteeringId})</p>
</div>