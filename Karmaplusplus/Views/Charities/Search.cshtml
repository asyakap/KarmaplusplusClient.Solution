@{
  ViewData["Title"] = "Services";
}
@using Karmaplusplus.Models;
@using System.Collections.Generic;

<div class="container">

  <h3>Search Results For '@ViewBag.SearchResults':</h3>
  @if (Model.Count == 0)
  {
    <p> No charities match this search </p>
  }
  else
  {
    <ol>
      @foreach (Charity charity in Model)
      {
        <li><strong>@charity.Name</strong> - @charity.Description</li>
      }
    </ol>
  }
<p>@Html.ActionLink("Return search page", "Index")</p>
</div>